<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/rv_item_margin">

    <ImageView
        android:id="@+id/iv_place_image"
        android:layout_width="@dimen/rv_item_image_dimen"
        android:layout_height="@dimen/rv_item_image_dimen"
        android:src="@drawable/ic_place_pink_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/test_text"
        android:textSize="@dimen/tv_place_name_text_size"
        app:layout_constraintLeft_toRightOf="@id/iv_place_image"
        app:layout_constraintStart_toEndOf="@id/iv_place_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_temperature_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_place_name"
        tools:text="@string/test_text"/>

</android.support.constraint.ConstraintLayout>